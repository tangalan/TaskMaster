<%= form_for @task do |f| %>

 <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :Description %><br>
    <%= f.text_area :Description, size: "40x8"%>
  </p>
 
  <p>
    <%= f.label :Category %><br>
	
	<%= f.radio_button :Category, 'Housework' %> 
	<%= f.label :Category, 'Housework', :value => 'Housework' %>
	
	<%= f.radio_button :Category, 'Delivery' %>
	<%= f.label :Category, 'Delivery', :value => 'Delivery' %>
	
	<%= f.radio_button :Category, 'Manual Labor' %>
	<%= f.label :Category, 'Manual Labor', :value => 'Manual Labor' %>
	
	<%= f.radio_button :Category, 'Misc' %>
	<%= f.label :Category, 'Misc', :value => 'Misc' %>
	
  </p>
  
  <p>
    <%= f.label :Date %><br>
    <%= f.date_field :Date, :value => Time.now.strftime("%Y-%m-%d") %>
  </p>
  
  <p>
    <%= f.label :Time %><br>
    <%= f.time_field :Time %>
  </p>
  
  <p>
    <%= f.label 'Reward ($)' %><br>
    <%= f.text_field :Reward %>
  </p>
  
  <p>
    <%= f.label 'Address' %><br>
    <%= f.text_field :address, :size => 50 %>
  </p>
  
  <p>
    <%= f.submit "Submit" %>
  </p>


<% end %>