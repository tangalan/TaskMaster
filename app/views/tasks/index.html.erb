<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<%= form_tag tasks_path, :method => :get do %>
	<p> <center>
		<%= text_field_tag :search, params[:search]%>
		<%= submit_tag "Search City", :name => nil %>
	</center> </p>

<% end %>



<table border="1" style="border:1px; width:100%;">
  <thead>
    <tr>
      <th>Description</th>
      <th>Category</th>
      <th>Date</th>
      <th>Time</th>
      <th>Reward ($)</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

    <tbody>
    <% for task in @tasks %>
      <tr>
        <td><%= task.Description %></td>
        <td><%= task.Category %></td>
        <td><%= task.Date %></td>
        <td><%= time_format(task.Time) %></td>
        <td><%= task.Reward %></td>
        <td><%= task.user.email %></td>  
        <td><%= task.address %> </td>
        
        <td><%= link_to 'Show', task %></td>
        <% if task.user == current_user %>
	        <td><%= link_to 'Edit', edit_task_path(task) %></td>
	        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	    <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>






<div style="float:left;">
	<center> <strong> <%= button_to "Home", root_path, :class => "button", :method => :get %>  </strong> </center> 
</div>

<div style="float:left;">
	<center> <%= button_to "New Task", new_task_path, :class => "button", :method => :get %>  </center>
</div>
 

